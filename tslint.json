{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "no-console": [false, "log"],
    "no-debugger": { "severity": "warning", "options": [true] },
    "curly": [true, "ignore-same-line"],
    "object-literal-sort-keys": false,
    "jsx-boolean-value": false,
    "jsx-no-lambda": false,
    "ordered-imports": false,
    "member-access": [false],
    "no-string-literal": false,
    "no-unused-variable": {
      "severity": "warning",
      "options": [
        true,
        {
          "ignore-pattern": "^_"
        }
      ]
    },
    "await-promise": true,
    "label-position": true,
    "no-duplicate-imports": true,
    "no-duplicate-variable": true,
    "no-return-await": true,
    "no-switch-case-fall-through": true,
    "no-var-keyword": true,
    "triple-equals": [true, "allow-null-check"],
    "use-isnan": true,
    "class-name": true,
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    "one-variable-per-declaration": true,
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-preblock"],
    "no-empty": { "severity": "warning", "options": [true] },
    "prefer-const": { "severity": "warning", "options": [true] },
    "quotemark": [true, "single", "jsx-double"],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "no-this-assignment": true,
    "no-shadowed-variable": false
  }
}
